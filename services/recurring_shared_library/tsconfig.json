{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationMap": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["ES2020", "DOM", "DOM.Iterable", "ScriptHost"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }